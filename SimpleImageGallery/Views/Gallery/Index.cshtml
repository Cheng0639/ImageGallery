@{
    ViewData[ "Title" ] = "Index";    
}
@using SimpleImageGallery.Data.Model;
@using SimpleImageGallery.Models
@model GalleryIndexModel

<div class="continer body-content">
    <div class="row gallery-content">
        @foreach( GalleryImage image in Model.Images ) {
            <div class="gallery-image-container">
                <a asp-controller="Gallery" asp-action="Detail" asp-route-id="@image.Id">
                    <div class="gallery-image" style="background:url(@image.Url)"></div>
                </a>
            </div>                       
        }
    </div>
</div>
